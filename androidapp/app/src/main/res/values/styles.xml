<resources>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/light_green</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/black_30pt</item>
        <item name="colorAccent">@color/lightNavy</item>
        <item name="colorControlNormal">@color/slateGrey_50pt</item>
    </style>

    <style name="ActionBar"/>

    <style name="ActionBar.Title">
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBar.Assets">
        <item name="android:textColor">@color/slateGrey</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
